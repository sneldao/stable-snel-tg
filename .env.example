# Telegram Bot Token (required)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# API Keys for External Services
GEMINI_API_KEY=your_gemini_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here
VENICE_API_KEY=your_venice_api_key_here

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=false  # Set to true to enable file logging
LOG_FILE=logs/snel_bot.log  # Path to log file (when LOG_TO_FILE is true)

# Cache Configuration
ENABLE_CACHE_PERSISTENCE=true  # Set to false to disable cache persistence
MAX_CACHE_ENTRIES=1000  # Maximum number of entries in the memory cache

# Rate Limiting (requests per second)
COINGECKO_RATE_LIMIT=0.5  # 30 per minute (free tier)
CRYPTOPANIC_RATE_LIMIT=0.01  # 36 per hour (free tier)
VENICE_RATE_LIMIT=0.012  # 1000 per day

# Advanced Settings
CIRCUIT_BREAKER_THRESHOLD=5  # Number of failures before circuit breaker opens
CIRCUIT_BREAKER_RECOVERY_TIME=60  # Seconds to keep circuit breaker open
